@model MercDevs_ej2.Models.Datosfichatecnica﻿
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            width: 100%;
            margin: auto;
            background-color: aliceblue;
        }

        .s {
            margin-left: 60%;
        }

        h1 {
            text-align: center;
            color: #070707;
            animation: fadeIn 2s ease-in-out;
            padding-top: 1%;
        }



        table {
            width: 50%;
            margin-left: 21%;
            border-collapse: collapse;
            animation: fadeIn 2s ease-in-out;
        }

        th, td {
            border: 2px solid #070707;
            padding: 10px;
            text-align: left;
        }
        /*colores de fondo o texto de todos los th si quieres se los cambias */
        th {
            background-color: #ffffff;
            color: rgb(0, 0, 0);
            text-align: center;
        }

        .ob {
            text-align: center;
            background-color: #acacac;
        }

        .tbh {
            background-color: #afafaf;
            color: rgb(0, 0, 0);
            text-align: center;
        }

        /*animaciones de transofrmaciones de deslizamiento*/


        /*pasar el cursor por encima lo podi cambiar si quieres o eliminar xd*/
        th:hover, td:hover {
            background-color: #ff0808;
            transition: background-color 0.3s ease;
        }
    </style>
</head>
<body>

    <!--tabla de datos de usuario-->
    <table>
        <h1>Ficha Tecnica</h1>
        <strong class="s">id del cliente : @Model.RecepcionEquipo.IdClienteNavigation.Nombre con ficha :@Model.IdDatosFichaTecnica  </strong>
        <br />
        <strong class="s">fecha:@(Model.FechaInicio?.ToString("dd/MM/yyyy"))</strong>
        <tr>
            <th colspan="11" class="tbh">Datos de usuario</th>
        </tr>
        <tr>
            <th colspan="2">Nombre:@Model.RecepcionEquipo?.IdClienteNavigation.Nombre</th>
            <th colspan="3">Apellido:@Model.RecepcionEquipo?.IdClienteNavigation.Apellido</th>
            <th colspan="6">Celular:@Model.RecepcionEquipo?.IdClienteNavigation.Telefono</th>
        </tr>
        <tr>
            <th colspan="5">
                Correo;@Model.RecepcionEquipo?.IdClienteNavigation.Correo
            </th>
            <th colspan="6">Direccion: @Model.RecepcionEquipo?.IdClienteNavigation.Direccion</th>
        </tr>


        <!--separacion tabla de datos usuarios - tabla observaciones del usuario -->
        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!-- separador del separador xd-->

        <tr>
            <th colspan="11" class="tbh"> Observaciones Del usuario</th>
        </tr>
        <th colspan="1" class="ob">N°</th>
        <th colspan="6">Descripcion</th>
        <th colspan="4">Check</th>
        </tr>
        <tr>
            <th colspan="1" class="ob">1</th>
            <th colspan="6">@Model.PobservacionesRecomendaciones</th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">2</th>
            <th colspan="6"><br></th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">3</th>
            <th colspan="6"><br></th>
            <th colspan="4" style=""><br></th>
        </tr>

        <!--separacion de tablas entre las de usuario y las de hardware-->

        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!--tabla de DATOS DE HARDWARE-->


        <tr>
            <th colspan="11" class="tbh">Datos del Hardware</th>
        </tr>
        <tr>
            <th class="ob">Tipo</th>
            <th  colspan="3">@{
                string tipoEquipo = "";
                switch (Model.RecepcionEquipo.TipoPc)
                {
                    case 0:
                        tipoEquipo = "PC Torre";
                        break;
                    case 1:
                        tipoEquipo = "Notebook";
                        break;
                    case 2:
                        tipoEquipo = "All-In-One";
                        break;
                    default:
                        tipoEquipo = "Desconocido";
                        break;
                }
                @tipoEquipo
            }
            </th>
            <th>Accesorios:@Model.RecepcionEquipo.Accesorio</th>
            <th>Cargador</th>
            <th colspan="5">Bolso</th>
        </tr>
        <tr>
            <th class="ob">Marca:@Model.RecepcionEquipo.MarcaPc</th>
            <th colspan="4">Modelo: @Model.RecepcionEquipo.ModeloPc</th>
            <th colspan="6">S/N:@Model.RecepcionEquipo.Nserie</th>
        </tr>


        <tr>
            <th rowspan="4" class="ob">CPU</th>
        </tr>
        <tr>

            <th rowspan="3">Intel</th>
            <th rowspan="3">AMD</th>
            <th rowspan="2">Velocidad</th>
            <th rowspan="3">RAM (GB)</th>
            <th rowspan="3" colspan="6">
                capacidad: @{
                    string memoriaRam = "";
                    switch (Model.RecepcionEquipo.CapacidadRam)
                    {
                        case 0:
                            memoriaRam = "4 GB";
                            break;
                        case 1:
                            memoriaRam = "6 GB";
                            break;
                        case 2:
                            memoriaRam = "8 GB";
                            break;
                        case 3:
                            memoriaRam = "16 GB";
                            break;
                        case 4:
                            memoriaRam = "Otro";
                            break;
                    }
                    @memoriaRam
                }
            </th>
            
           
        </tr>
        <tr>
        <tr>
            <th><br></th>
        </tr>
        <tr>
            <th rowspan="3" class="ob">Almacenamiento</th>
            <th colspan="1" rowspan="2">
                HDD @{
                        string almacenamiento = "";
                        switch (Model.RecepcionEquipo.TipoAlmacenamiento)
                        {
                            case 0:
                                almacenamiento = "HDD";
                                break;
                            case 1:
                                almacenamiento = "SDD Sata";
                                break;
                            case 2:
                                almacenamiento = "SDD M.2";
                                break;
                            case 3:
                                almacenamiento = "SSD NVM M.2";
                                break;
                        }
                        @almacenamiento
                    }
            </th>
            <th rowspan="2">
                SSD: @{
                        string aalmacenamiento = "";
                        switch (Model.RecepcionEquipo.TipoAlmacenamiento)
                        {
                            case 0:
                                almacenamiento = "HDD";
                                break;
                            case 1:
                                almacenamiento = "SDD Sata";
                                break;
                            case 2:
                                almacenamiento = "SDD M.2";
                                break;
                            case 3:
                                almacenamiento = "SSD NVM M.2";
                                break;
                        }
                        @almacenamiento
                    }
            </th>
            <th>Capacidad:</th>

            <th rowspan="2">GPU</th>
            <th rowspan="2">
                Tarjeta: @{
                        string gpu = "";
                        switch (Model.RecepcionEquipo.TipoGpu)
                        {
                           
                            case 1:
                                gpu = "Tarjeta";
                                break;
                            case 2:
                                gpu = "Otro";
                                break;
                        }
                        @gpu
                    }
            </th>
            <th colspan="4" rowspan="2">
                Chip:@{
                        string gpuu = "";
                        switch (Model.RecepcionEquipo.TipoGpu)
                        {
                            case 0:
                                gpu = "Chip Integrado";
                                break;
                            
                            case 2:
                                gpu = "Otro";
                                break;
                        }
                        @gpu
                    }
            </th>
            <th rowspan="2">&nbsp;&nbsp;&nbsp;</th>
        </tr>
        <tr>
            <th> @Model.RecepcionEquipo.CapacidadAlmacenamiento</th>
        </tr>
        </tr>
        <tr>
        <tr>
            <th colspan="4" rowspan="1" class="ob">P. Madre:</th>
            <th colspan="8" style="background-color: white;"><br></th>
        </tr>
        </tr>
        <!--separacion-->
        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!--separacion-->
        <tr>
            <th colspan="11" class="tbh">Datos Software inicial</th>
        </tr>
        <th colspan="1" class="ob">Sistema operativo</th>
        <th colspan="4">Windows:</th>
        <th colspan="6">Linux:</th>
        </tr>
        <tr>
            <th colspan="1" class="ob">
                Software instalado:
            </th>
            <th colspan="2">M. Office:</th>
            <th colspan="2">
                Navegador: @{
                    string navegadorwebinstalado = "";
                    switch (Model.NavegadorWebInstalado)
                    {
                        case 0:
                            navegadorwebinstalado = "No Instalado";
                            break;
                        case 1:
                            navegadorwebinstalado = "Chrome";
                            break;
                        case 2:
                            navegadorwebinstalado = "Chrome y Firefox";
                            break;
                    }
                    @navegadorwebinstalado
                }
            </th>
            <th colspan="3">
                Lector PDF:@{
                    string lectorpdfinstalado = "";
                    switch (Model.Soinstalado)
                    {
                        case 0:
                            lectorpdfinstalado = "No Instalado";
                            break;
                        case 1:
                            lectorpdfinstalado = "Instalado";
                            break;
                        case 2:
                            lectorpdfinstalado = "No Aplica";
                            break;
                    }
                    @lectorpdfinstalado
                }
            </th>
            <th colspan="3">Compresor</th>
        </tr>
        <tr>
            <th rowspan="1" class="ob">Inconvenientes:</th>
            <th colspan="10">
                <br>
                <br>
                <br>
                <br>
            </th>
        </tr>

        <!--separador de tablas magico :D-->
        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!-- end of separador de tablas magico :D-->
        <tr>
            <th colspan="11" class="tbh">
                Datos Software Final
            </th>
        </tr>
        <tr>
            <th colspan="2" class="ob">S.O instalado</th>
            <th colspan="2">
                Win 10:@{
                    string soinstalado1 = "";
                    switch (Model.Soinstalado)
                    {
                        case 0:
                            soinstalado1 = "Windows 10";
                            break;
                      
                    }
                    @soinstalado1
                }
            </th>
            <th colspan="2">
                Win 11@{
                    string soinstalado2 = "";
                    switch (Model.Soinstalado)
                    {
                       
                        case 1:
                            soinstalado2 = "Windows 11";
                            break;
                        
                    }
                    @soinstalado2
                }
            </th>
            <th colspan="7">
                Linux:@{
                    string soinstalado3 = "";
                    switch (Model.Soinstalado)
                    {
                       
                        case 2:
                            soinstalado3 = "Linux";
                            break;
                    }
                    @soinstalado3
                }
            </th>
        </tr>
        <tr>
            <th colspan="2" rowspan="5" class="ob">Herramientas de Oficina</th>
            <th colspan="5">Microsoft Office</th>
            <th colspan="4">Libre office</th>
        </tr>
        <tr>
            <th colspan="2">2013</th>
            <th colspan="1">2019</th>
            <th colspan="2">365</th>
            <th colspan="2">24.+</th>
            <th colspan="4">7.+</th>
        </tr>
        <tr>
            <th colspan="3">Adobe PDF</th>
            <th colspan="2">Nitro</th>
            <th colspan="2">Winrar</th>
            <th colspan="2"></th>
        </tr>
        <tr>
            <th colspan="9">Navegadores Web</th>
        </tr>
        <tr>
            <th colspan="3">Chrome</th>
            <th colspan="2">Firefox</th>
            <th colspan="2">Opera</th>
            <th colspan="2">Safari</th>
        </tr>
        <tr>
            <th colspan="2" class="ob">Antivirus:</th>
            <th colspan="9" style="background-color: white;">@Model.AntivirusInstalado<br></th>
        </tr>
        <tr>
         
       
        <!--separador  magico :D-->
        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!--final separador magico :D-->
        <tr>
            <th colspan="11" class="tbh"> diagnosticos</th>
        </tr>
        <th colspan="1" class="ob">N°</th>
        <th colspan="6">Descripcion</th>
        <th colspan="4">Check</th>
        </tr>
        <tr>
            <th colspan="1" class="ob">1</th>
            <th colspan="6">
                @if (Model.Diagnosticosolucions == null || !Model.Diagnosticosolucions.Any())
                {
                <p>No hay diagnostico disponible</p>
                }
                else
                {
                    foreach (var diagnostico in Model.Diagnosticosolucions)
                    {
                    <p>@diagnostico.DescripcionDiagnostico</p>
                    }
                }</th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">2</th>
            <th colspan="6"><br></th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">3</th>
            <th colspan="6"><br></th>
            <th colspan="4" style=""><br></th>
        </tr>
        <!--separacion magica-->
        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!--separacion magica-->
        <th colspan="11" class="tbh"> Soluciones y/o Intervenciones realizadas</th>
        </tr>
        <th colspan="1" class="ob">N°</th>
        <th colspan="6">Descripción</th>
        <th colspan="4">Tiempo</th>
        </tr>
        <tr>
            <th colspan="1" class="ob">1</th>
            <th colspan="6">
                @if (Model.Diagnosticosolucions == null || !Model.Diagnosticosolucions.Any())
                {
                    <p>No hay solucion  disponible</p>
                }
                else
                {
                    foreach (var diagnostico in Model.Diagnosticosolucions)
                    {
                        <p>@diagnostico.DescripcionSolucion</p>
                    }
                }
            </th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">2</th>
            <th colspan="6"><br></th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">3</th>
            <th colspan="6"><br></th>
            <th colspan="4"><br></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">4</th>
            <th colspan="6"></th>
            <th colspan="5"></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">5</th>
            <th colspan="6"></th>
            <th colspan="5"></th>
        </tr>
        <tr>
            <th colspan="1" class="ob">6</th>
            <th colspan="6"></th>
            <th colspan="5"></th>
        </tr>
        <!--separacion magica-->
        <tr>
            <th colspan="11" style="border-right-style:hidden; background-color:aliceblue; border: 2px solid #070707;">
                <br>
                <br>
            </th>
        </tr>
        <!--separacion magica-->

        <tr>
            <th colspan="11" class="tbh">Observaciones o Recomendaciones</th>
        </tr>
        <tr>
            <th colspan="11">@Model.PobservacionesRecomendaciones<br><br><br><br><br><br><br><br><br><br><br></th>
        </tr>
    </table>

</body>
</html>